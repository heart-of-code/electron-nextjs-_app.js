{
  "name": "fantasy-grounds-importer",
  "version": "0.0.1",
  "license": "",
  "repository": "heartofcode/fantasy-grounds-importer",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "next build src/renderer && next export src/renderer",
    "pack": "npm run build && electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.heartofcode.module-builder",
    "productName": "Module Builder",
    "copyright": "Copyright Â© 2020 Heart Of Code",
    "files": [
      "**/*",
      "!src/renderer",
      "src/renderer/out"
    ],
    "win": {
      "target": "NSIS"
    }
  },
  "devDependencies": {
    "bundle": "^2.1.0",
    "electron": "^13.6.6",
    "electron-builder": "^22.6.1",
    "next": "^9.4.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {
    "ajv": "^6.12.2",
    "app-root-path": "^3.0.0",
    "electron-is-dev": "^1.2.0",
    "electron-next": "^3.1.5",
    "styled-components": "^5.1.0"
  }
}
